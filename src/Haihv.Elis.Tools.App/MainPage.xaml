<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Haihv.Elis.Tools.App.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="20"
            Spacing="10">

            <Label
                Text="Xin chào!"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1"/>

            <Label
                Text="Công cụ dùng để trích xuất dữ liệu ELIS SQL"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Công cụ dùng để trích xuất dữ liệu ELIS SQLI"/>

            <BoxView
                HeightRequest="1"
                Color="Gray"
                HorizontalOptions="Fill"
                Margin="0,10"/>

            <VerticalStackLayout
                Spacing="10">
                <Label
                    Text="Thông tin kết nối dữ liệu"
                    Style="{StaticResource SubHeadline}"
                    SemanticProperties.HeadingLevel="Level3"/>
                <VerticalStackLayout
                    Spacing="2"
                    WidthRequest="560">
                    <!--Máy chủ-->
                    <Label
                        Text="Máy chủ dữ liệu:"
                        Style="{StaticResource LableEntry}"/>
                    <Entry
                        x:Name="EntryServer"
                        Text="{Binding ConnectionInfo.Server}"
                        Placeholder="Máy chủ dữ liệu"/>

                    <!--Cơ sở dữ liệu-->
                    <Label
                        Text="Tên cơ sở dữ liệu:"
                        Style="{StaticResource LableEntry}"/>
                    <Entry
                        x:Name="EntryDatabase"
                        Text="{Binding ConnectionInfo.Database}"
                        Placeholder="Tên cơ sở dữ liệu"/>

                    <!--Tài khoản-->
                    <Label
                        Text="Tên tài khoản truy cập:"
                        Style="{StaticResource LableEntry}"/>

                    <Entry
                        x:Name="EntryUserId"
                        Text="{Binding ConnectionInfo.Username}"
                        Placeholder="Tên tài khoản truy cập"/>

                    <!--Mật khẩu-->
                    <Label
                        Text="Mật khẩu truy cập:"
                        Style="{StaticResource LableEntry}"/>

                    <Entry
                        x:Name="EntryPassword"
                        IsPassword="True"
                        Text="{Binding ConnectionInfo.Password}"
                        Placeholder="Mật khẩu truy cập"/>
                    <Grid
                        HorizontalOptions="Fill"
                        ColumnDefinitions="*,*"
                        ColumnSpacing="15"
                        Margin="0,15,0,0">
                        <Button
                            x:Name="CheckConnectionBtn"
                            Grid.Column="0"
                            Text="Kiểm tra Kết nối"
                            SemanticProperties.Hint="Kiểm tra kết nối đến cơ sở dữ liệu"
                            Clicked="CheckConnectionBtn_Clicked"
                            BackgroundColor="{StaticResource Info}"
                            TextColor="White"
                            HorizontalOptions="Fill"/>
                        <Button
                            x:Name="SaveConnectionBtn"
                            Grid.Column="1"
                            Text="Lưu Kết nối"
                            IsEnabled="False"
                            SemanticProperties.Hint="Lưu thông tin kết nối"
                            Clicked="SaveConnectionBtn_Clicked"
                            HorizontalOptions="Fill"/>
                    </Grid>
                </VerticalStackLayout>
            </VerticalStackLayout>

            <BoxView
                HeightRequest="1"
                Color="Gray"
                HorizontalOptions="Fill"
                Margin="0,20"/>
            <VerticalStackLayout
                Spacing="10">
                <Label
                    Text="Quản lý thông tin kết nối"
                    Style="{StaticResource SubHeadline}"
                    SemanticProperties.HeadingLevel="Level3"/>

                <Grid
                    HorizontalOptions="Fill"
                    ColumnDefinitions="*,*"
                    ColumnSpacing="15"
                    Margin="0,10,0,0">
                    <Button
                        x:Name="ImportDataBtn"
                        Grid.Column="0"
                        Text="Import Kết nối"
                        SemanticProperties.Hint="Import thông tin kết nối từ file JSON"
                        Clicked="ImportDataBtn_Clicked"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        HorizontalOptions="Fill"/>
                    <Button
                        x:Name="ExportDataBtn"
                        Grid.Column="1"
                        Text="Export Kết nối"
                        SemanticProperties.Hint="Export thông tin kết nối ra file JSON"
                        Clicked="ExportDataBtn_Clicked"
                        BackgroundColor="{StaticResource Secondary}"
                        TextColor="White"
                        HorizontalOptions="Fill"/>
                </Grid>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
