<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Haihv.Elis.Tools.Export"
             x:Class="Haihv.Elis.Tools.Export.MainPage">

    <Grid>
        <!-- Nội dung chính -->
        <ScrollView>
            <VerticalStackLayout
                Padding="30,0"
                Spacing="25">
                <Image
                    Source="dotnet_bot.png"
                    HeightRequest="185"
                    Aspect="AspectFit"
                    SemanticProperties.Description="dot net bot in a hovercraft number nine"/>

                <Label
                    Text="ELIS Tools Export"
                    Style="{StaticResource Headline}"
                    SemanticProperties.HeadingLevel="Level1"/>
                <Label
                    Text="Công cụ xuất dữ liệu ELIS"
                    Style="{StaticResource SubHeadline}"
                    SemanticProperties.HeadingLevel="Level2"/>

                <!-- Hiển thị trạng thái kết nối -->
                <Border BackgroundColor="LightGray"
                        Padding="10"
                        Margin="0,10">
                    <StackLayout>
                        <Label x:Name="ConnectionStatusLabel"
                               Text="Chưa có kết nối cơ sở dữ liệu"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="Red"/>
                        <Label x:Name="ConnectionDetailsLabel"
                               Text=""
                               FontSize="12"
                               TextColor="Gray"/>
                    </StackLayout>
                </Border>

                <Button
                    x:Name="DataConnectionBtn"
                    Text="Kết nối dữ liệu"
                    BackgroundColor="#007ACC"
                    TextColor="White"
                    SemanticProperties.Hint="Mở dialog cấu hình kết nối dữ liệu"
                    Clicked="OnDataConnectionClicked"
                    HorizontalOptions="Fill"/>

                <Button
                    x:Name="TestQueryBtn"
                    Text="Test truy vấn dữ liệu"
                    BackgroundColor="#28A745"
                    TextColor="White"
                    SemanticProperties.Hint="Thử truy vấn dữ liệu từ connection hiện tại"
                    Clicked="OnTestQueryClicked"
                    IsEnabled="False"
                    HorizontalOptions="Fill"/>

                <Button
                    x:Name="CounterBtn"
                    Text="Click me"
                    SemanticProperties.Hint="Counts the number of times you click"
                    Clicked="OnCounterClicked"
                    HorizontalOptions="Fill"/>
            </VerticalStackLayout>
        </ScrollView>
        <!-- Dialog overlay (ẩn ban đầu) -->
        <local:DataConnectionDialog x:Name="ConnectionDialog"
                                    IsVisible="False"
                                    CloseRequested="OnDialogCloseRequested"
                                    ConnectionSaved="OnConnectionSaved"/>
    </Grid>

</ContentPage>
