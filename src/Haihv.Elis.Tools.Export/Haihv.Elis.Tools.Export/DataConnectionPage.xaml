<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Haihv.Elis.Tools.Export.DataConnectionPage"
             Title="Kết nối dữ liệu SQL Server">
    <ContentPage.Content>
        <ScrollView>
            <Grid Padding="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0"
                       Grid.Column="0"
                       Text="Cấu hình kết nối tới dữ liệu ELIS SQL Server"
                       FontSize="20"
                       FontAttributes="Bold"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"/>

                <Label Grid.Row="2"
                       Grid.Column="0"
                       Text="Tên máy chủ SQL Server:"
                       FontSize="16"/>
                <Entry Grid.Row="4"
                       Grid.Column="0"
                       x:Name="ServerEntry"
                       Text="localhost"
                       Placeholder="Ví dụ: localhost, 192.168.1.100, server.domain.com"
                       HorizontalOptions="FillAndExpand"
                       Focused="OnEntryFocused"/>

                <Label Grid.Row="6"
                       Grid.Column="0"
                       Text="Tên cơ sở dữ liệu:"
                       FontSize="16"/>

                <Entry Grid.Row="8"
                       Grid.Column="0"
                       x:Name="DatabaseEntry"
                       Text="ELIS"
                       Placeholder="Nhập tên database"
                       HorizontalOptions="FillAndExpand"
                       Focused="OnEntryFocused"/>

                <Label Grid.Row="10"
                       Grid.Column="0"
                       Text="Tên đăng nhập:"
                       FontSize="16"/>

                <Entry Grid.Row="12"
                       Grid.Column="0"
                       x:Name="UsernameEntry"
                       Text="sa"
                       Placeholder="Nhập username (để trống nếu dùng Windows Authentication)"
                       HorizontalOptions="FillAndExpand"
                       Focused="OnEntryFocused"/>

                <Label Grid.Row="14"
                       Grid.Column="0"
                       Text="Mật khẩu:"
                       FontSize="16"/>

                <Entry Grid.Row="16"
                       Grid.Column="0"
                       x:Name="PasswordEntry"
                       IsPassword="True"
                       Placeholder="Nhập password (để trống nếu dùng Windows Authentication)"
                       HorizontalOptions="FillAndExpand"
                       Focused="OnEntryFocused"/>

                <Button Grid.Row="18"
                        Grid.Column="0"
                        x:Name="ConnectButton"
                        Text="Kiểm tra kết nối"
                        BackgroundColor="#007ACC"
                        TextColor="White"
                        HorizontalOptions="FillAndExpand"
                        Clicked="OnConnectButtonClicked"/>

                <Label Grid.Row="20"
                       Grid.Column="0"
                       x:Name="StatusLabel"
                       Text=""
                       FontSize="14"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>